#include <stdio.h>

float sub(float a, float b);

int main() {
    float num1, num2, result;

    printf("Enter the first number: ");
    scanf("%f", &num1);
    printf("Enter the second number: ");
    scanf("%f", &num2);

    result = sub(num1, num2);

    printf("The result of subtraction is: %.2f\n", result);
    return 0;
}

float sub(float a, float b) {
    return a - b;
}

