#include <stdio.h>

float add(float a, float b);

int main() {
    float num1, num2, result;
    printf("Enter the first number: ");
    scanf("%f", &num1);
    printf("Enter the second number: ");
    scanf("%f", &num2);

    result = add(num1, num2);

    printf("The result of addition is: %.2f\n", result);

    return 0;
}

float add(float a, float b) {
    return a + b;
}

